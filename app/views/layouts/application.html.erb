<!DOCTYPE html>
<html>
<head>
  <title>BearBnb</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <%= render 'shared/nav' %>
  <% if flash[:notices] %>
  <div class="alert alert-warning notices" role="alert">
      <% flash[:notices].each do |msg| %>
        <p><b><%= msg %></b></p>
      <% end %>
    </div>
  <% end %>
</header>
<body>

<%= yield %>

</body>
</html>
