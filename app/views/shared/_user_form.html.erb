<% action = (type == :newuser) ? users_url : session_url %>
<% button_text = (type == :newuser) ? "Sign Up" : "Log In" %>

<form class="navbar-form navbar-left" role="search" action="<%= action %>" method="POST">
    <div class="form-group">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <input type="text" class="form-control" placeholder="username"  name="user[username]">
    <input type="password" class="form-control" placeholder="password"  name="user[password]">

  </div>
  <button type="submit" class="btn btn-default"><%= button_text %></button>
</form>
