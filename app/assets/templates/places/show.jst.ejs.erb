<div class="container">
  <div class="row">

    <div class="col-md-6">
      <div id="myCarousel" class="carousel slide place-show-carousel" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <%% _(images).each(function(image) { %>
            <%% var urls = place.escape(image) %>
            <%% var url_list = urls.split(",") %>
            <%% console.log(urls) %>
            <%% console.log(url_list[0]) %>
            <%% if (url_list.length !== 0) { %>
              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
              <%% for (var i = 1; i < url_list.length; i++) { %>
                <%% console.log(i) %>
                <li data-target="#myCarousel" data-slide-to="<%%= i %>"></li>
              <%% } %>
            <%% } %>
          <%% }) %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <%% _(images).each(function(image) { %>
            <%% var urls = place.escape(image) %>
            <%% var url_list = urls.split(",") %>
            <%% if (url_list.length !== 0) { %>
              <div class="item active">
                <img class="img-responsive center-block img-rounded" src="<%%= url_list[0] %>">
              </div>
              <%% for (var i = 1; i < url_list.length; i++) { %>
                <div class="item">
                  <img src="<%%= url_list[i] %>">
                </div>
              <%% } %>
            <%% } %>
          <%% }) %>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div id="map-canvas">
    </div>
    
    <div class="col-md-6">
      <table class="table table-hover table-bordered">
        <%% _(details).each(function(attr) { %>
          <%% if (place.escape(attr)) { %>
            <tr>
              <%% if (attr === "desc") { %>
                <td>Description</td>
              <%% } else { %>
                <td class="text-capitalize col-md-3"><%%= attr %></td>
              <%% } %>
              <td><%%= place.escape(attr) %><br></td>
            </tr>
          <%% } %>
        <%% }) %>
      </table>
      <div class="small-map">
      </div>
    </div>
  </div>
</div>
